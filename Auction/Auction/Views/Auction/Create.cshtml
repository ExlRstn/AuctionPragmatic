@model Shared.DTO.CreateAuctionDTO
@{
   
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Auction</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form {
            display: flex;
            border: 2px solid #ccc;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

            .form h2 {
                margin-bottom: 20px;
                text-align: center;
                width: 100%;
            }

            .form .input-group {
                display: flex;
                align-items: center;
                margin-bottom: 20px;
            }

                .form .input-group label {
                    margin-right: 10px;
                    width: 100px;
                    text-align: right;
                }

                .form .input-group input, .form .input-group textarea {
                    flex: 1;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }

            .form .column {
                flex: 1;
                padding: 0 20px;
            }

        textarea {
            width: 415px;
            height: 418px;
        }

        .form .column .submit-button {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .form .submit-button button {
            width: 100px;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #2ecc71;
            color: white;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="container">
        <form class="form" asp-controller="Auction" asp-action="Create" method="post">
            <h2>Create Auction</h2>
            <div class="column">
                <div class="input-group">
                    <label for="Title">Title</label>
                    <input type="text" id="Title" name="Title" placeholder="Title" required asp-for="Title">
                </div>
                <div class="input-group">
                    <label for="Description">Description</label>
                    <textarea id="Description" name="Description" placeholder="Description" asp-for="Description"></textarea>
                </div>
                <div class="submit-button">
                    <button type="submit">Create</button>
                </div>
            </div>
            <div class="column">
                <div class="input-group">
                    <label for="StartingBid">Starting Bid</label>
                    <input type="number" id="StartingBid" name="StartingBid" required asp-for="StartingBid">
                </div>
                <div class="input-group">
                    <label for="StartTime">Start Time</label>
                    <input type="datetime-local" id="StartTime" name="StartTime" asp-for="StartTime">
                </div>
                <div class="input-group">
                    <label for="EndTime">End Time</label>
                    <input type="datetime-local" id="EndTime" name="EndTime" required asp-for="EndTime">
                </div>
            </div>
        </form>
    </div>
</body>

</html>
