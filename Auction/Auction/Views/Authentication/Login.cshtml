@model Shared.DTO.LoginAndRegisterViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and Register Forms</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .container {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
        }

        .form {
            border: 2px solid #ccc;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .form h2 {
                margin-bottom: 20px;
                text-align: center;
            }

            .form .input-group {
                display: flex;
                align-items: center;
                margin-bottom: 20px;
            }

                .form .input-group label {
                    margin-right: 10px;
                }

                .form .input-group input {
                    flex: 1;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }

            .form .name-inputs input {
                flex: 1;
                margin-right: 10px;
            }

            .form button {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
                background-color: #2ecc71;
                color: white;
                font-weight: bold;
            }
    </style>
</head>

<body>
    <div class="container">
        <form class="form login-form" asp-controller="Authentication" asp-action="Login" method="post">
            <h2>Login</h2>
            <div class="input-group">
                <label for="login-username">Username</label>
                <input type="text" id="login-username" name="LoginUser.Username" placeholder="Username" required asp-for="LoginUser.Username">
            </div>
            <div class="input-group">
                <label for="login-password">Password</label>
                <input type="password" id="login-password" name="LoginUser.Password" placeholder="Password" required asp-for="LoginUser.Password">            </div>
            <button type="submit">Login</button>
        </form>
        

        <form class="form register-form" asp-controller="Authentication" asp-action="Register" method="post">
            <h2>Register</h2>
            <div class="name-inputs input-group">
                <input type="text" placeholder="First Name" required asp-for="RegisterUser.FirstName">
                <input type="text" placeholder="Last Name" required asp-for="RegisterUser.LastName">
            </div>
            <div class="input-group">
                <input type="text" placeholder="Username" required asp-for="RegisterUser.Username">
            </div>
            <div class="input-group">
                <input type="password" placeholder="Password" required asp-for="RegisterUser.Password">
            </div>
            <div class="input-group">
                <input type="password" placeholder="Confirm Password" required asp-for="RegisterUser.ConfirmPassword">
            </div>
            <button type="submit">Register</button>
        </form>
    </div>
</body>

</html>
